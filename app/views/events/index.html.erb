<h1>Aktuelle Veranstaltungen</h1>


<% @events.each do |event| %>

<div style="border-style:solid;border-width:1px;margin-bottom:20px;width:500px">
<p style="font-weight:bold;font-size:12pt">Titel: <%= event.title %></p>

<p style="font-style:italic;font-size:10pt">
Von : <%=event.artist%>
</p>
<p style="font-style:italic;font-size:10pt;">
Eintritt (voll/erm) : <%=event.price_full%> / 
<%if event.price_disc == nil %> 
-- <%else 
 event.price_disc end
 %>
</p>
<p style="font-style:italic;font-size:10pt">
<%=event.description%>
</p>

<p>Termine:</p>
<table style="width:auto">
<%event.dates.each do |date|%>
<tr>
  <td style="width:auto">
  <%=date.date%>
  </td>
  <td style="width:auto">
  <%=date.location%>
  </td>
    <td style="width:auto">
  <%=date.vacant_seats%>
  </td>
  <td>
  <%=link_to "Reservieren", new_ticket_path(date.id)%>
  </td>
<%end%>

</tr>
</table>

</div>



<%end %>

